/**
 * Returns: true if the given door is valid for the given room interior, false
 * otherwise.
 */
bool isValidDoor()(Region4 interior, Door d)
{
    return iota(4)
        .map!(i => (i == d.axis) ? (d.pos[i] == interior.min[i] - 1 ||
                                    d.pos[i] == interior.max[i])
                                 : (interior.min[i] <= d.pos[i] &&
                                    d.pos[i] < interior.max[i]))
        .fold!((a,b) => a && b)(true);
}

