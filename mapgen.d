void genPitTraps(World w, MapNode tree, Region4 bounds, int count,
                 int openPitPct = 30)
{
version(none)
    genBackEdges(tree, bounds, count, count*8,
        (in RoomNode[2] rooms, ref Door d) {
            assert(d.axis == 0);

            bool nextToExisting;
